.span9
  .row-fluid
    .span8.main_content
      %p#notice= notice
      %h3
        = @node.title
      %br
      %p 
        = @node.body
      .tabbable
        %ul.nav.nav-pills.right
          - unless current_user.blank?
            %li.active
              %a{"data-toggle" => "tab", :href => "#me"} My Node
            %li
              %a{"data-toggle" => "tab", :href => "#my_topic"} My Topic
          %li
            %a{"data-toggle" => "tab", :href => "#everyones_topic"} Everyone's topic
        .tab-content
          -if current_user
            #me.tab-pane.active
              - if @gnu
                -froms_positive = @gnu.positive_global_node_user_froms
                -froms_negative = @gnu.negative_global_node_user_froms
                = render :partial => 'arguments/show', :locals => {:froms_positive => froms_positive, :froms_negative => froms_negative, :gnu => @gnu, :previous => "", :original => @gnu.id}
            #my_topic.tab-pane
              - unless @question.name == 'All'
                - @question.user_conclusions.each do |gnu| 
                  %h3= gnu.title
                  -froms_positive = gnu.positive_global_node_user_froms
                  -froms_negative = gnu.negative_global_node_user_froms
                  = render :partial => 'arguments/show', :locals => {:froms_positive => froms_positive, :froms_negative => froms_negative, :gnu => gnu, :previous => "global_user", :original => gnu.id}
          #everyones_topic{:class => "tab-pane #{current_user ? '' : 'active'}"}
            - unless @question.name == 'All'
              - @question.conclusions.each do |gn| 
                %h3= gn.title
                -froms_positive = gn.positive_global_node_froms
                -froms_negative = gn.negative_global_node_froms
                = render :partial => 'arguments/show', :locals => {:froms_positive => froms_positive, :froms_negative => froms_negative, :gnu => gn, :previous => "global", :original => gn.id}
    .span4.right_content
      = render 'links', :nodes=>@nodes_with_links
