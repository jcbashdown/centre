            %a.hide-node-through-link.hidden{"data-global-node-to-id" => "5", "data-type" => "Negative"}
              %i.icon-minus{:alt => "Hide create opposing point form"}
            %a.show-node-through-link{"data-global-node-to-id" => "5", "data-type" => "Positive"}
              %i.icon-plus{:alt => "Show create supporting point form"}
            %a.hide-node-through-link.hidden{"data-global-node-to-id" => "5", "data-type" => "Positive"}
              %i.icon-plus{:alt => "Hide create supporting point form"}
          %div
            %ul.positive
