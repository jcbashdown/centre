#everyones_topic.tab-pane.active{'ng-controller' => "QuestionsCtrl"}
  %div{"ng:repeat" => "conclusion in question"}
    %h3
      %a{:href => "/nodes/9"} {{conclusion.title}}
      %a.accordion-toggle-override.delete-node{"data-confirm" => "Are you sure?", :href => "/nodes/9", :rel => "nofollow"}
        %i.icon-remove
    %div
      %h5
        Argument For
        %a.show-node-through-link{"data-global-node-to-id" => "9", "data-type" => "Positive"}
          %i.icon-plus{:alt => "Show create supporting point form"}
        %a.hide-node-through-link.hidden{"data-global-node-to-id" => "9", "data-type" => "Positive"}
          %i.icon-plus{:alt => "Hide create supporting point form"}
      .hidden.node-through-link.Positive.9
        %form.form-inline.remote-submit-and-refresh{"accept-charset" => "UTF-8", :action => "/links", :method => "post"}
          %div{:style => "margin:0;padding:0;display:inline"}
            %input{:name => "utf8", :type => "hidden", :value => "✓"}/
            %input{:name => "authenticity_token", :type => "hidden", :value => "33LpvMhlYQSdNES/vx3KlSe4iJ/Mx/7K1o1+KAU73Q8="}/
          %input#type{:name => "type", :type => "hidden", :value => "Positive"}/
          %input#global_link_global_node_to_id{:name => "global_link[global_node_to_id]", :type => "hidden", :value => "9"}/
