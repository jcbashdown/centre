.topbar-wrapper{:style => "z-index: 5;"}
  .topbar{"data-dropdown" => "dropdown"}
    .topbar-inner
      .container
        %h3
          %a{:href => "#"} Organisation Name
        %ul.nav
          %li.dropdown
            %a.dropdown-toggle{:href => "#"} More Apps
            %ul.dropdown-menu
              %li
                %a{:href => "#"} Secondary link
              %li
                %a{:href => "#"} Something else here
              %li.divider
              %li
                %a{:href => "#"} Another link
        - if user_signed_in?
          = link_to('Logout', destroy_user_session_path, :method=>'delete')
        - else
          = form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
            = f.email_field :email, {:placeholder=>"Email"} 
            = f.password_field :password, {:placeholder=>"Password"}
            = f.submit "Submit", :class => 'btn large primary'
        %h3.active
          %a{:href => "/", :class=>"right"}Centre
