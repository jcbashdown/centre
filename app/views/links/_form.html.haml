= form_for @link do |f|
  -if @link.errors.any?
    #error_explanation
      %h2= "#{pluralize(@link.errors.count, "error")} prohibited this link from being saved:"
      %ul
        - @link.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :node_from
    = f.number_field :node_from
  .field
    = f.label :value
    = f.check_box :value
  .field
    = f.label :user_id
    = f.number_field :user_id
  .field
    = f.label :node_to
    = f.number_field :node_to
  .actions
    = f.submit 'Save'
