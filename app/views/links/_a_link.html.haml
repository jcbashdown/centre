-link_id = link.new_record? ? "#{rand(Time.now.to_i)}#{Time.now.to_i}" : link.id
%tr{:id => "link_#{link_id}", :class=>direction}
  %td
    = radio_button link_id, :value, '_destroy', {:checked => (link.new_record? ? true : false), :class=>"submitter #{link_id}"}
  %td
    = radio_button link_id, :value, "Positive", {:checked => (link.positive? ? true : false), :class=>"submitter #{link_id}"}
  %td
    = radio_button link_id, :value, "Negative", {:checked => (link.negative? ? true : false), :class=>"submitter #{link_id}"}
  %td
    = hidden_field link_id, :node_from, {:value=>link.global_node_from.id, :class=>"node_from #{link_id}"}
    = hidden_field link_id, :node_to, {:value=>link.global_node_to.id, :class=>"node_to #{link_id}"}
    - if direction == "link_tos"
      %a{:href => node_path(link.global_node_to, @limit_order)}
        = link.global_node_to.title
    - if direction == "link_ins"
      %a{:href => node_path(link.global_node_from, @limit_order)}
        = link.global_node_from.title
