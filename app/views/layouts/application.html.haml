!!!
%html
  %head
    %title centre
    %meta{:charset => "utf-8"}
    %meta{"http-equiv" => "X-UA-Compatible", :content => "IE=edge,chrome=1"}
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}/
    = stylesheet_link_tag :application
    = javascript_include_tag :application
    = csrf_meta_tags
  %body{:class => params[:controller]}
    #container.container
      %header
        %nav
          %ul.hmenu
            = render 'shared/navigation'
        - flash.each do |name, msg|
          = content_tag :div, msg, :id => "flash_#{name}" if msg.is_a?(String)
      #main{:role => "main"}
        .row
          .span3
            -if @user
              = render 'new_form'
            #accordion2.accordion
              - @global_nodes.each do |node|
                .accordion-group
                  .accordion-heading-override
                    %a.accordion-toggle-two{"data-parent" => "#accordion2", "data-toggle" => "collapse", :href => "#collapse#{node.node.id}"}
                      %i.icon-plus
                      =node.title
                    %a{:href => node_path(node.node, @limit_order), :class => 'accordion-toggle-override'}
                      %i.icon-play.right
                  .accordion-body.collapse{:style => "height: 0px;", :id => "collapse#{node.node.id}"}
                    .accordion-inner
                      test
                      =node.text
                      - if @user
                        %a.right.accordion-toggle-override{"data-confirm" => "Are you sure?", "data-method" => "delete", :href => node_path(node.node), :rel => "nofollow"}
                          %i.icon-remove.right
            = will_paginate @global_nodes
          =yield 
      %footer
