!!!
%html
  %head
    %title centre
    %meta{:charset => "utf-8"}
    %meta{"http-equiv" => "X-UA-Compatible", :content => "IE=edge,chrome=1"}
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}/
    = stylesheet_link_tag :application
    = javascript_include_tag :application
    = csrf_meta_tags
  %body{:class => params[:controller]}
    #container.container
      %header
        %nav
          %ul.hmenu
            = render 'shared/navigation'
        - flash.each do |name, msg|
          = content_tag :div, msg, :id => "flash_#{name}" if msg.is_a?(String)
      #main{:role => "main"}
        .row
          .span3
            -if @user
              = link_to 'New Node', new_node_path(@limit_order)
            #accordion2.accordion
              - @global_nodes.each do |node|
                .accordion-group
                  .accordion-heading-override
                    =link_to node.title, node_path(node, @limit_order), :class => 'accordion-toggle-override'
                    - if @user
                      = link_to 'Destroy', node, :confirm => 'Are you sure?', :method => :delete, :class => 'right accordion-toggle-override'
                    %a.accordion-toggle-two{"data-parent" => "#accordion2", "data-toggle" => "collapse", :href => "#collapseOne"}
                      &nbsp;
                      %i.icon-plus.right
                  #collapseOne.accordion-body.collapse{:style => "height: 0px;"}
                    .accordion-inner
                      Item One
                      =node.text
            = will_paginate @global_nodes
            - if @user
              = link_to 'New Node', new_node_path(@limit_order)
          =yield 
      %footer
