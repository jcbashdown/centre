-question ||=nil
- if question
  %strong= "...for #{user.name}"
  %div{:class => "user_argument", :id => user.id}
  - user.concluding_nodes(question).each do |node| 
    %h3
      =link_to node.title, node_path(node.global_node)
    = render :partial => 'arguments/show', :locals => {:path_method => :user_argument_path, :node => node, :previous => previous, :original => node.id}
