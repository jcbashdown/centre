%tr{:id => "link_#{new_id}"}
  %td
    = radio_button new_id, :value, '_destroy', {:checked => (value==nil ? true : false), :class=>"submitter link_to #{new_id}"}
  %td
    = radio_button new_id, :value, 1, {:checked => (value==1 ? true : false), :class=>"submitter link_to #{new_id}"}
  %td
    = radio_button new_id, :value, 0, {:checked => (value==0 ? true : false), :class=>"submitter link_to #{new_id}"}
  %td
    = radio_button new_id, :value, -1, {:checked => (value==-1 ? true : false), :class=>"submitter link_to #{new_id}"}
  %td
    = hidden_field new_id, :node_from, {:value=>link.node_from, :class=>"node_from link_to #{new_id}"}
    = hidden_field new_id, :node_to, {:value=>link.node_to, :class=>"node_to link_to #{new_id}"}
    = title
