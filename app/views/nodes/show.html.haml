        -froms_negative = @gnu.negative_global_node_user_froms
        = render :partial => 'arguments/show', :locals => {:froms_positive => froms_positive, :froms_negative => froms_negative}
        
    .span3.right_content
      = render 'links', :nodes=>@nodes_with_links
