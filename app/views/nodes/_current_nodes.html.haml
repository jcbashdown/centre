#accordion2.accordion
  - nodes.each do |node|
    .accordion-group
      .accordion-heading-override
        %a.accordion-toggle-two{"data-parent" => "#accordion2", "data-toggle" => "collapse", :href => "#collapse#{node.id}"}
          %i.icon-plus-sign
          =node.title
        %a{:href => node_path(node), :class => 'accordion-toggle-override'}
          %i.icon-play.right
      .accordion-body.collapse{:style => "height: 0px;", :id => "collapse#{node.id}"}
        .accordion-inner
          &nbsp;
          NODE BODY
          - if current_user
            %a.right.accordion-toggle-override{"data-confirm" => "Are you sure?", "data-method" => "delete", :href => node_path(node), :rel => "nofollow"}
              %i.icon-remove.right
= paginate nodes
