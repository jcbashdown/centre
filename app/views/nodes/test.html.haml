%ul{:class => "tabs", 'data-tabs'=>"tabs"}

  %li.active
    %a{:href =>"#links_tos_edit"}
      Links To
      %span
  %li
    %a{:href => "#links_ins_edit"}
      Links In
      %span
.tab-content
  #links_tos_edit.active.checkboxes
    %table.bordered-table.zebra-striped.condensed
      %tr
        %th + 
        %th = 
        %th - 
        %th Title
      - @nodes.each do |node|
        -link = node[:link_to]
        %tr
          = form_for link, :child_index=>(link.new_record? ? Time.now : link.id) do |f|
            %td
              = f.radio_button :value, true
            %td
              = f.radio_button :value, nil 
            %td
              = f.radio_button :value, false 
            %td
              = f.hidden_field :node_from
              = f.hidden_field :node_to
              =f.submit "Submit"
              = node[:node].title
  #links_ins_edit.checkboxes
    %table.bordered-table.zebra-striped.condensed
      %tr
        %th + 
        %th = 
        %th - 
        %th Title
      - @nodes.each do |node|
        -link = node[:link_in]
        %tr
          = form_for link, :child_index=>(link.new_record? ? Time.now : link.id) do |f|
            %td
              = f.radio_button :value, true
            %td
              = f.radio_button :value, nil 
            %td
              = f.radio_button :value, false 
            %td
              = f.hidden_field :node_from
              = f.hidden_field :node_to
              =f.submit "Submit"
              = node[:node].title
