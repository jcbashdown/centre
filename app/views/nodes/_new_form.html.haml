= form_for @node do |f|
  -if @node.errors.any?
    #error_explanation
      %h2= "#{pluralize(@node.errors.count, "error")} prohibited this node from being saved:"
      %ul
        - @node.errors.full_messages.each do |msg|
          %li= msg
  %ul.unstyled
    %li.clearfix 
      = f.label :title
      .input
        = f.text_field :title
    %li.clearfix
      = f.label :text
      .input
      = f.text_area :text
  .actions
    = f.submit 'Save'
