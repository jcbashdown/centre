= form_for @new_node, :html => {:class => 'form-inline'} do |f|
  -if @new_node.errors.any?
    #error_explanation
      %h2= "#{pluralize(@new_node.errors.count, "error")} prohibited this node from being saved:"
      %ul
        - @new_node.errors.full_messages.each do |msg|
          %li= msg
  .row-fluid
    .input-append.span12
      .row-fluid
        = f.text_field :title, :placeholder=>"Node Title", :class=>"typeahead span9", :autocomplete => "off", :value =>(session["nodes_query"] ? session["nodes_query"] : "")
        = f.submit 'Add/View', :class => 'btn span3'
  .row-fluid
    .span12
      &nbsp;
  .row-fluid
    .span12
      .well.well-small{:style => "margin-bottom:0px;"}
        .row-fluid
          .span4
            %h4
              Conclusion?:
          .span8
            %label.checkbox.inline
              No&nbsp;
              = f.radio_button :is_conclusion, false
            %label.checkbox.inline
              No opinion&nbsp;
              = f.radio_button :is_conclusion, "", :checked => true
            %label.checkbox.inline
              Yes&nbsp;
              = f.radio_button :is_conclusion, true
  - if @question
    %input{:style => 'display:none;', :value => @question.id, :name => "question"}
